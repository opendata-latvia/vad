#declarations.span12
  %table.table.table-condensed{data: {source: datatable_declarations_path}}
    %thead
      %tr
        - Declaration.datatable_columns.each do |column|
          %th{data: {name: column[:name]}}
            .column_label= column[:label]
            .column_filter
              %input.input-small{placeholder: "meklēt kolonnā"}
    %tbody
  .download-data
    %h4 Lejuplādēt datus
    %p
      = link_to "CSV formātā", "#", :data => {"download-path" => download_declarations_path(:format => 'csv')}, :class => "btn"
      = link_to "Visus detalizētos datus", "#", :data => {"download-path" => download_all_declarations_path}, :class => "btn"

:javascript
  $(function() {
    new VAD.DeclarationsDatatableView({
      el: "#declarations"
    });
  });
